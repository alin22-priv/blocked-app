{
  "manifest_version": 3,
  "name": "Focus Timer - Productivity Tracker",
  "version": "1.0.0",
  "description": "Block distracting websites and track your focus time with Pomodoro technique",
  
  "permissions": [
    "storage",
    "tabs",
    "declarativeNetRequest"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Focus Timer"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "blocked-redirect.html", 
        "blocked-redirect.css", 
        "blocked-redirect.js",
        "dashboard/dashboard.html", 
        "dashboard/dashboard.css",
        "dashboard/dashboard.js",
        "blocked/blocked.html",
        "blocked/blocked.css", 
        "blocked/blocked.js",
        "popup/popup.html",
        "popup/popup.css",
        "popup/popup.js",
        "utils/storage.js",
        "utils/timeTracker.js",
        "utils/blockingSystem.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}